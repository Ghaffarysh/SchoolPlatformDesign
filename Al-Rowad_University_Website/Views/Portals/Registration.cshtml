<!-- AOS Animation Library -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

@section scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize AOS animation library
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                offset: 100
            });

            // Accordion functionality
            const accordionHeaders = document.querySelectorAll('.RegistrationPortal-accordion-header');

            accordionHeaders.forEach(header => {
                header.addEventListener('click', () => {
                    const item = header.parentElement;
                    const content = header.nextElementSibling;
                    const icon = header.querySelector('i');

                    // Toggle the active class
                    item.classList.toggle('active');

                    // Toggle icon rotation
                    if (item.classList.contains('active')) {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        icon.classList.remove('fa-chevron-down');
                        icon.classList.add('fa-chevron-up');
                    } else {
                        content.style.maxHeight = 0;
                        icon.classList.remove('fa-chevron-up');
                        icon.classList.add('fa-chevron-down');
                    }

                    // Close other open items
                    accordionHeaders.forEach(otherHeader => {
                        if (otherHeader !== header) {
                            const otherItem = otherHeader.parentElement;
                            const otherContent = otherHeader.nextElementSibling;
                            const otherIcon = otherHeader.querySelector('i');

                            otherItem.classList.remove('active');
                            otherContent.style.maxHeight = 0;
                            otherIcon.classList.remove('fa-chevron-up');
                            otherIcon.classList.add('fa-chevron-down');
                        }
                    });
                });
            });

            // Department guideline toggles
            const guidelineToggles = document.querySelectorAll('.RegistrationPortal-guideline-toggle');

            guidelineToggles.forEach(toggle => {
                toggle.addEventListener('click', () => {
                    const department = toggle.getAttribute('data-department');
                    const guidelines = document.getElementById(`${department}-guidelines`);
                    const icon = toggle.querySelector('i');

                    guidelines.classList.toggle('active');

                    if (guidelines.classList.contains('active')) {
                        toggle.innerHTML = `Hide Department Guidelines <i class="fas fa-chevron-up"></i>`;
                        guidelines.style.maxHeight = guidelines.scrollHeight + 'px';
                    } else {
                        toggle.innerHTML = `View Department Guidelines <i class="fas fa-chevron-down"></i>`;
                        guidelines.style.maxHeight = 0;
                    }
                });
            });

            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();

                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;

                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth'
                        });

                        // If it's an accordion item, open it
                        if (targetElement.classList.contains('RegistrationPortal-accordion-item')) {
                            const header = targetElement.querySelector('.RegistrationPortal-accordion-header');
                            header.click();
                        }
                    }
                });
            });
        });
    </script>
}