<!-- Initialize AOS for scroll animations -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<!-- Leaflet JS for interactive maps -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 120
        });

        // Initialize Map
        function initMap() {
            // Convert coordinates from DMS to decimal
            const latitude = 13 + (34 / 60) + (39 / 3600); // 13°34'39"N
            const longitude = 43 + (58 / 60) + (58 / 3600); // 43°58'58"E

            const universityLocation = [latitude, longitude];

            // Create map centered on university location
            const map = L.map('university-map').setView(universityLocation, 16);

            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Add custom marker
            const universityIcon = L.divIcon({
                className: 'university-marker',
                html: '<i class="fas fa-map-marker-alt"></i>',
                iconSize: [40, 40],
                iconAnchor: [20, 40]
            });

            // Add marker to map
            L.marker(universityLocation, {
                icon: universityIcon,
                title: 'Al-Rowwad University',
                alt: 'Al-Rowwad University Location Marker'
            }).addTo(map)
              .bindPopup('<b>Al-Rowwad University</b><br>HXHM+446, Taiz, Yemen');

            // Add click event to open Google Maps in new tab
            map.on('click', function() {
                window.open(`https://www.google.com/maps?q=${latitude},${longitude}`, '_blank');
            });
        }

        // Initialize map when the map container is in viewport
        const mapObserver = new IntersectionObserver((entries) => {
            if (entries[0].isIntersecting) {
                initMap();
                mapObserver.disconnect();
            }
        }, { threshold: 0.1 });

        const mapElement = document.getElementById('university-map');
        if (mapElement) {
            mapObserver.observe(mapElement);
        }
    });
</script>